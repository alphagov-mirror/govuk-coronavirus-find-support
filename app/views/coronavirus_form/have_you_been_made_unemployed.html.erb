<% content_for :title do %><%= t("coronavirus_form.questions.have_you_been_made_unemployed.title") %><% end %>
<% content_for :meta_tags do %>
  <meta name="description" content="<%= t("coronavirus_form.questions.have_you_been_made_unemployed.title") %>" />
<% end %>

<% content_for :back_link do %>
  <%= render "govuk_publishing_components/components/back_link", { href: previous_path } %>
<% end %>

<%= form_tag({},
  "data-module": "track-coronavirus-form-find-support-have-you-been-made-unemployed",
  "data-question-key": "have_you_been_made_unemployed",
  "id": "have_you_been_made_unemployed",
  "novalidate": "true",
) do %>

<%= render "govuk_publishing_components/components/radio", {
  heading: t("coronavirus_form.questions.have_you_been_made_unemployed.title"),
  is_page_heading: true,
  name: "have_you_been_made_unemployed",
  error_message: error_items("have_you_been_made_unemployed"),
  items: t("coronavirus_form.questions.have_you_been_made_unemployed.options").map do |option|
    {
      id: "option_#{option.parameterize.underscore}",
      value: option.parameterize.underscore,
      text: option,
      checked: @form_responses[:have_you_been_made_unemployed] == option,
    }
  end
} %>
<%= render "govuk_publishing_components/components/button", text: "Continue", margin_bottom: true %>
<% end %>
