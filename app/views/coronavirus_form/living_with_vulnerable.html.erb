<% content_for :title do %><%= t("coronavirus_form.questions.living_with_vulnerable.title") %><% end %>
<% content_for :meta_tags do %>
  <meta name="description" content="<%= t("coronavirus_form.questions.living_with_vulnerable.title") %>" />
<% end %>

<% content_for :back_link do %>
  <%= render "govuk_publishing_components/components/back_link", { href: previous_path } %>
<% end %>

<%= form_tag({},
  "data-module": "track-coronavirus-form-find-support-living-with-vulnerable",
  "data-question-key": "living_with_vulnerable",
  "id": "living_with_vulnerable",
  "novalidate": "true"
) do %>

<%= render "govuk_publishing_components/components/radio", {
  heading: t("coronavirus_form.questions.living_with_vulnerable.title"),
  is_page_heading: true,
  name: "living_with_vulnerable",
  error_message: error_items("living_with_vulnerable"),
  items: t("coronavirus_form.questions.living_with_vulnerable.options").map do |option|
      {
        value: option,
        text: option,
        id: option.parameterize.underscore,
        checked: @form_responses[:living_with_vulnerable] == option,
      }
    end
} %>

<%= render "govuk_publishing_components/components/button", text: "Continue", margin_bottom: true %>
<% end %>
